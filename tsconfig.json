{
	"compilerOptions": {
	  "target": "ES2019",
	  "module": "commonjs",
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "noEmitOnError": true,
	  "sourceMap": true
	},
	"include": [
	  "src/**/*.ts"
	],
	"exclude": [
	  "node_modules", "media"
	]
  }
  